{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "cosmicblocks/curvy",
	"version": "0.1.0",
	"title": "Curvy",
	"category": "widgets",
	"icon": "smiley",
	"description": "Curvy Shape that Divide page sections in a cool way",
	"example": {},
	"supports": {
		"html": false,
		"color": {
			"background": true,
			"text": true,
			"link": true
		},
		"spacing": {
			"padding": true
		}
	},
	"attributes": {
		"enableTopCurve": {
			"type": "boolean",
			"default": true
		},
		"flipHorizontally" : {
			"type": "boolean",
			"default": false
		},
		"flipVertically" : {
			"type": "boolean",
			"default": false
		
		},
		"topWidth" : {
			"type": "number",
			"default": 100
		},
		"topHeight" : {
			"type": "number",
			"default": 100
		},
		"style": {
			"type": "object",
			"default":  {
				"color": {
					"background":"#0384ad" 
				},
				"spacing": {
					"padding": {
						"right": "50px",
						"left": "50px",
						"bottom": "100px",
						"top": "100px"
					}
				}
			}
		}
	},
	"textdomain": "cosmicblocks",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}
